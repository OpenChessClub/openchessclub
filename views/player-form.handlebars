<div class="px-4 py-6 sm:px-0">
  <div class="mb-6">
    <a href="/" class="text-blue-600 hover:text-blue-800 text-sm">&larr; Home</a>
  </div>

  <div class="max-w-2xl">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">{{title}}</h1>

    <form action="{{action}}" method="POST" class="bg-white shadow rounded-lg p-6">
      <div class="space-y-6">
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700">Player Name *</label>
          <input type="text" name="name" id="name" required value="{{player.name}}"
            class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500">
        </div>

        <div>
          <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
          <input type="email" name="email" id="email" value="{{player.email}}"
            class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500">
          <p class="mt-1 text-sm text-gray-500">Optional - for contact purposes</p>
        </div>

        <div>
          <label for="chesscom" class="block text-sm font-medium text-gray-700">Chess.com Username</label>
          <input type="chesscom" name="chesscom" id="chesscom" value="{{player.chesscom}}"
            class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500">
        </div>
        
        <div>
          <label for="lichess" class="block text-sm font-medium text-gray-700">Lichess Username</label>
          <input type="lichess" name="lichess" id="lichess" value="{{player.lichess}}"
            class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500">
        </div>

        <div>
          <label for="current_rating" class="block text-sm font-medium text-gray-700">Starting Rating</label>
          <input type="number" name="current_rating" id="current_rating" value="{{player.current_rating}}"
            class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500">
          <p class="mt-1 text-sm text-gray-500">Default: 1200 (standard starting ELO rating)</p>
        </div>

        <div>
          <label class="flex items-center">
            <input type="checkbox" name="active" class="rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" checked>
            <span class="ml-2 text-sm text-gray-700">Active Player</span>
          </label>
          <p class="mt-1 text-sm text-gray-500">Inactive players won't appear in game recording</p>
        </div>
      </div>

      <div class="mt-6 flex space-x-3">
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium">
          {{#if player.slug}}Update Player{{else}}Add Player{{/if}}
        </button>
        <a href="{{#if player.slug}}/players/{{player.slug}}{{else}}/players{{/if}}" class="bg-gray-200 hover:bg-gray-300 text-gray-800 px-4 py-2 rounded-md text-sm font-medium">
          Cancel
        </a>
      </div>
    </form>
  </div>
</div>
